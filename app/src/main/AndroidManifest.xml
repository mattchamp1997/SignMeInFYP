<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.signmeinfyp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-sdk android:minSdkVersion="10"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SignMeIn"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Register"
            android:label="Register"/>
        <activity
            android:name=".Main"
            android:label="@string/title_activity_my_classes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayListView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MyModules.NewModule.NewModule"
            android:label="New Module"/>
        <activity android:name=".ui.MyModules.ModuleView"
            android:label="Module View"/>
        <activity android:name=".ui.MyModules.NewClass"
            android:label="New Class"/>
        <activity android:name=".SignIn"
            android:label="Sign In"/>
    </application>
</manifest>